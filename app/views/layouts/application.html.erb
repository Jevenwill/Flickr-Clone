<!DOCTYPE html>
<html>
<head>
  <title>Flicker</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
            <a class="brand" href="<%= root_path %>"><img src='/assets/icon.jpeg'></a>

          <div class="nav-collapse">
            <ul class="nav">
      <% if user_signed_in? %> 
              <li>
                <%= drop_down "You" do %>
                  <%= menu_item "Photostream", photostream_path(current_user.photostream.id) %>
                  <%= menu_item "Photo Collections", collections_path %>
                  <%#= drop_down_divider %>
                  <%= menu_item "Favorites", favorites_url %>
                <% end %>
               </li>


              <li><%= drop_down "Contacts" do %>
                  <%= menu_item "Recent Photos", contacts_path %>
                  <%= menu_item "Contact List", root_url %>
                  <%#= drop_down_divider %>
                  <%= menu_item "Photo of Contacts", favorites_url %>
                  <%= menu_item "Add Contacts", favorites_url %>
                <% end %>
              </li>

              <li><%= drop_down "Communities" do %>
                  <%= menu_item "Groups List", photostreams_path %>
                  <%= menu_item "Recent Discussions", collections_path %>
                  <%#= drop_down_divider %>
                  <%= menu_item "Search Groups", favorites_url %>
                  <%= menu_item "Create a Group", favorites_url %>
                <% end %>
              </li>

              <li><%= link_to "Upload", photos_upload_path %></li>
              
              <li> 
                    <%= drop_down "<img src='#{current_user.avatar.url(:thumb)}'>"  do %>
                    <%= menu_item "Log Out",
                    destroy_user_session_path, method: :delete %>
                    <%= menu_item "Settings", edit_account_path %>
                  <% end %>
              </li>
          <% end %>

            </ul>
          </div>
        </div>
      </div>
    </div>

<!-- Devise notices -->
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<%= yield %>

</body>
</html>

<!DOCTYPE html>
<html>
<head>
  <title>Flicker</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
            <a class="brand" href="<%= root_path %>"><img src='/assets/icon.jpeg'></a>

          <div class="nav-collapse">
            <ul class="nav">
      <% if user_signed_in? %> 
              <li>
                <%= drop_down "You" do %>
                  <%= menu_item "Photostream", photostream_path(current_user.photostream.id) %>
                  <%= menu_item "Photo Collections", collections_path %>
                  <%#= drop_down_divider %>
                  <%= menu_item "Favorites", favorites_url %>
                <% end %>
               </li>


              <li><%= drop_down "Contacts" do %>
                  <%= menu_item "Recent Photos", contacts_path %>
                  <%= menu_item "Contact List", root_url  %>
                  <%#= drop_down_divider %>
                  <%= menu_item "Photo of Contacts", favorites_url %>
                  <%= menu_item "Add Contacts", favorites_url %>
                <% end %>
              </li>

              <li><%= drop_down "Communities" do %>
                  <%= menu_item "Groups List", photostreams_path %>
                  <%= menu_item "Recent Discussions", collections_path %>
                  <%#= drop_down_divider %>
                  <%= menu_item "Search Groups", favorites_url %>
                  <%= menu_item "Create a Group", favorites_url %>
                <% end %>
              </li>

              <li><%= link_to "Upload", photos_upload_path %></li>
              
              <li> <!-- <img src='#{current_user.avatar.url(:thumb)}'> -->
                    <%= drop_down "#{current_user.email}"  do %>
                    <%= menu_item "Log Out",
                    destroy_user_session_path, method: :delete %>
                    <%= menu_item "Settings", edit_account_path %>
                  <% end %>
              </li>
              <li>
                <form method="get" action="/search" id="custom-search-form" class="form-search form-horizontal pull-right" STYLE="z-index: 1099">

                        <input name="search_filter" type="text" class="search-query" placeholder="Search by Tag" id="tag_search_input"
                        STYLE='z-index: 1099'>
                        <button type="submit" class="btn"><i class="icon-search"></i></button>
                </form>
               </li>

              <% end %>

            </ul>

          </div>

        </div>

      </div>

    </div>

<!-- Devise notices -->
<!-- <p class="notice"><%= notice %></p> -->
<!-- <p class="alert"><%= alert %></p> -->
<div class='container'>
<%= yield %>
</div>


</body>
</html>



<style>
    #custom-search-form {
        margin:0;
        margin-top: 5px;
        padding: 0;
    }
 
    #custom-search-form .search-query {
        padding-right: 3px;
        padding-right: 4px \9;
        padding-left: 3px;
        padding-left: 4px \9;
        /* IE7-8 doesn't have border-radius, so don't indent the padding */
 
        margin-bottom: 0;
        -webkit-border-radius: 3px;
        -moz-border-radius: 3px;
        border-radius: 3px;
    }
 
    #custom-search-form button {
        border: 0;
        background: none;
        /** belows styles are working good */
        padding: 2px 5px;
        margin-top: 2px;
        position: relative;
        left: -28px;
        /* IE7-8 doesn't have border-radius, so don't indent the padding */
        margin-bottom: 0;
        -webkit-border-radius: 3px;
        -moz-border-radius: 3px;
        border-radius: 3px;
    }
 
    .search-query:focus + button {
        z-index: 3;   
    }
</style>
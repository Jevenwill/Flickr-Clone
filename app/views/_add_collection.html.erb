<%= form_for :collection, :url => collections_path, :remote => true, :html => {:id => "add_collection"} do |f| %>
<%= f.label "Add Collection" %>
<%= f.text_field :title %>
<%= f.submit value="Add" %>
<% end %>

<script>
$(function(){
  $('#add_collection').on('ajax:success', function(event, data){
    console.log(data)
    $('#collections_select').append(data);
  })
})
</script>
